<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">   
	<display-name>LoginServlet</display-name>
    <description>Servlet Demos.</description>
    <!-- Define servlets that are included in the example application -->
	<servlet>
		<!--Here we declare servlet's registered name -->
        <servlet-name>LoginServlet</servlet-name>
       	<servlet-class>login.servlet.LoginServlet</servlet-class>
    </servlet>

    <!--Here we say that the LoginServlet can be invoked by writing
    the path and login to the address bar of the browser -->

    <servlet-mapping>
       	<servlet-name>LoginServlet</servlet-name>
     	<url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
</web-app>

 